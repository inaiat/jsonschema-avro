{
  "name": "json-schema-to-avro",
  "description": "Convert JSON Schema into Apache Avro schema",
  "license": "MIT",
  "author": "katsanva",
  "homepage": "https://github.com/katsanva/jsonschema-avro#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katsanva/jsonschema-avro.git"
  },
  "bugs": {
    "url": "https://github.com/katsanva/jsonschema-avro/issues"
  },
  "version": "1.0.0",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": "NODE_ENV=test nyc mocha 'test/*.ts'",
    "prepare": "npm run build",
    "build": "tsc --declaration src/index.ts",
    "lint": "tslint -p .",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.3",
    "@types/node": "^11.13.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "keywords": [
    "avro",
    "json-schema",
    "jsonschema"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "pre-commit": "lint-staged"
    }
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/katsanva/jsonschema-avro/blob/master/LICENSE"
    }
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "npm run lint:fix",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/*.js",
      "node_modules"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true,
    "report-dir": "./coverage"
  }
}